apiVersion: batch/v1
kind: Job
metadata:
  name: {{ .Release.Name }}-{{ .Chart.Name }}
spec:
  template:
    spec:
      containers:
      - name: {{ .Release.Name }}-{{ .Chart.Name }}
        image: patternlabs/<molecule>.<atom_name>:<tag>
        envFrom:
        - configMapRef:
            name: {{ .Release.Name }}-{{ .Chart.Name }}
      restartPolicy: Never
      imagePullSecrets:
        - name: pattern.docker.credentials
  backoffLimit: 4

