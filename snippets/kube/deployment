{{ if .Values.<app_name>.enabled }}
apiVersion: apps/v1
kind: Deployment
metadata:
  # if you need multiple config maps you can do something like so
  # name: {{ .Release.Name }}-{{ .Chart.Name }}-<app_name>
  # optionally you can group config maps logically and make them more
  # based on whats contained in them ex
  # name: {{ .Release.Name }}-{{ .Chart.Name }}-<config_type>
  name: {{ .Release.Name }}-{{ .Chart.Name}}
  labels:
    # this is the label that will be used to match the deployment to the service
    app: {{ .Release.Name }}-{{ .Chart.Name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      # this should match the labels in the pod template
      app: {{ .Release.Name }}-{{ .Chart.Name }}
  template:
    metadata:
      labels:
        # this should match the match_labels above
        app: {{ .Release.Name }}-{{ .Chart.Name }}
    spec:
      containers:
      - name: {{ .Release.Name }}-{{ .Chart.Name }}
        image: {{ .Values.image.name }}:{{ .Values.image.tag }}
        ports:
        - containerPort: {{ .Values.port }}
        envFrom:
        - configMapRef:
            name: {{ .Release.Name }}-{{ .Chart.Name }}
      imagePullSecrets:
        - name: pattern.docker.credentials
{{ end }}
