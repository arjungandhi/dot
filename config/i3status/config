# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 3
	color_good = "#A3BE8C"
	color_bad = "#BF616A"
	color_degraded = "#B48EAD"
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "disk /data"
order += "wireless _first_"
order += "ethernet _first_"
order += "wireless pattern_vpn"
order += "battery all"
order += "volume master"
order += "tztime local"

cpu_usage {
        format = " cpu  %usage "
}

cpu_temperature 0 {
        format = " T: %degrees ºC "
}


disk "/" {
        # format = " hdd %avail "
        format = " SSD %avail "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = "  %ip "
        format_down = "  "
}

wireless _first_ {
        format_up = " 直 %essid %ip"
        format_down = " 睊 "
}

wireless pattern_vpn {
	format_up = "  Connected to Pattern VPN %ip "
	format_down = "  "
}

battery all {
        format = " %status %percentage"
        format_down = "sad" 
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = ""
        status_bat = ""
        status_unk = "?"
        status_full = ""
        low_threshold = 15
        threshold_type = time
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %a, %m-%d-%Y %H:%M:%S "
}
 
volume master {
        format = "  %volume "
        format_muted = " 婢%volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
