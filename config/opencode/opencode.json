{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["opencode"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5-coder:7b-16k": {
          "name": "qwen2.5-coder:7b-16k"
        },
        "deepseek-r1:8b-16k": {
          "name": "deepseek-r1:8b-16k"
        }
      }
    }
  },
  "agent": {
    "build": {
      "model": "ollama/qwen2.5-coder:7b-16k"
    },
    "plan": {
      "model": "ollama/deepseek-r1:8b-16k",
      "reasoningEffort": "high"
    },
    "search": {
      "model": "ollama/deepseek-r1:8b-16k",
      "prompt": "You are a specialized search assistant. Help find information across emails, drive files, notes, and local data. Provide comprehensive, well-reasoned answers.",
      "reasoningEffort": "high"
    }
  }
}
