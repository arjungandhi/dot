{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["opencode"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5-coder:7b": {
          "name": "qwen2.5-coder:7b"
        },
        "llama3.2:3b": {
          "name": "llama3.2:3b"
        },
        "nomic-embed-text": {
          "name": "nomic-embed-text"
        }
      }
    }
  },
  "agent": {
    "build": {
      "model": "ollama/qwen2.5-coder:7b"
    },
    "plan": {
      "model": "ollama/qwen2.5-coder:7b"
    },
    "search": {
      "model": "ollama/llama3.2:3b",
      "prompt": "You are a specialized search and aggregation assistant. Help find and synthesize information across emails, drive files, notes, and local data. Provide comprehensive, well-organized answers."
    },
    "embedding": {
      "model": "ollama/nomic-embed-text"
    }
  },
  "mcp": {
    "google_workspace": {
      "type": "local",
      "command": ["uvx"],
      "args": ["workspace-mcp"],
      "env": {
        "GOOGLE_CLIENT_SECRET_PATH": "/opt/monkey/secrets/opencode_google.json",
        "OAUTHLIB_INSECURE_TRANSPORT": "1"
      }

    }
  }
}
